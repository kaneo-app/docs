---
import { SEO } from "astro-seo";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import "../styles/global.css";

const title = "Kaneo";
const description = "Project management made simple for teams";
let canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
canonicalURL = canonicalURL.slice(0, canonicalURL.length - 1);

const ogImage = new URL("/og-image.png", Astro.site).toString();
---

<!doctype html>
<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL.slice()}
      twitter={{
        creator: "@kaneoapp",
        site: "@kaneoapp",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: title,
          image: ogImage,
        },
        image: {
          alt: "Kaneo's landing page",
        },
      }}
    />
  </head>
  <body class="min-h-screen bg-white dark:bg-zinc-950">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color-scheme: dark;
  }
</style>
