---
import Default from "@astrojs/starlight/components/Head.astro";
import type { Props } from "@astrojs/starlight/props";

const title = "Kaneo";
const subtitle = "Project management made simple for teams";
const description =
    "An open source project management platform focused on simplicity and efficiency. Self-host it, customize it, make it yours.";
let canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
canonicalURL = canonicalURL.slice(0, canonicalURL.length - 1);

const ogImage = new URL("/og-image.png", Astro.site).toString();
---

<Default {...Astro.props}><slot /></Default>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<meta name="description" content={description} />

<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={`${title} - ${subtitle}`} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<script
    is:inline
    defer
    data-domain="kaneo.app"
    src="https://plausible.kaneo.app/js/script.js"></script>
